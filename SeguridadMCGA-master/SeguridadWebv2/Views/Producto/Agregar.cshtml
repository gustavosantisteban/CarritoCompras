@model SeguridadWebv2.Models.Aplicacion.Producto

@{
    ViewBag.Title = "Agregar";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Formulario Agregar Categoria</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <div class="control-label col-md-2">Nombre Producto</div>
            <div class="col-md-6 input-group">
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-group">
                    </span>
                </span>
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Precio</div>
            <div class="col-md-6 input-group">
                @Html.TextBoxFor(model => model.Precio, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-group">
                    </span>
                </span>
                @Html.ValidationMessageFor(model => model.Precio)
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">Imagen - Foto:</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ImagenURL, new { htmlAttributes = new { @class = "form-control", @Value = "http://placehold.it/350x150" } })
                @Html.ValidationMessageFor(model => model.ImagenURL)
            </div>
        </div>

        <div class="form-group">

            <div class="control-label col-md-2">Categoria</div>
            <div class="col-md-10">
                @Html.DropDownList("IdCategoria", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Volver a la Lista", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




