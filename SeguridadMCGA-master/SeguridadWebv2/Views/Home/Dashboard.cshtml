
@{
    ViewBag.Title = "Dashboard";
}

@if (Request.IsAuthenticated)
{
    <div class="col-md-12">
        <!-- widget -->
        <div class="widget">
            <div class="widget-header">
                <i class="fa fa-tasks"></i>
                <h3>Menu del Sistema</h3>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <div class="shortcuts">
                    @if (User.IsInRole("Admin") || User.IsInRole("AllUsuarios"))
                    {
                        <a href='@Url.Action("Index", "UsuariosAdmin")' class="shortcut"><i class="fa fa-user"></i><span class="shortcut-label">Usuarios</span></a>}
                    @if (User.IsInRole("Admin") || User.IsInRole("AllGrupos"))
                    {
                        <a href='@Url.Action("Index", "GruposAdmin")' class="shortcut"><i class="fa fa-group"></i><span class="shortcut-label">Grupos</span></a>}
                    @if (User.IsInRole("Admin") || User.IsInRole("AllPermisos"))
                    {
                        <a href='@Url.Action("Index", "AccionesAdmin")' class="shortcut"><i class="fa fa-check"></i><span class="shortcut-label">Permisos</span></a>}
                    @if (User.IsInRole("Admin") || User.IsInRole("AllProductos"))
                    {
                        <a href='@Url.Action("Index", "Producto")' class="shortcut"> <i class="fa fa-list-alt"></i><span class="shortcut-label">Productos</span></a>}
                    @if (User.IsInRole("Admin") || User.IsInRole("AllCategorias"))
                    {
                        <a href='@Url.Action("Index", "Categoria")' class="shortcut"> <i class="fa fa-tag"></i><span class="shortcut-label">Categorias</span></a>}

                </div>
                <!-- /shortcuts -->
            </div>
            <!-- /widget-content -->
        </div>
        <!-- /widget -->
    </div>

    @*@if (User.IsInRole("AllVendedor") || User.IsInRole("Vendedor"))
    {
        @Html.Partial("_DashboardVendedorList")
    }
    @if (User.IsInRole("AllCliente") || User.IsInRole("Cliente"))
    {
        @Html.Partial("_DashboardClienteList")
    }*@
    if (User.IsInRole("Admin"))
    {
        @Html.Partial("_DashboardAdministrador")
    }
}
